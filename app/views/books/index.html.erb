<h1>Books</h1>

<table><!--表を作成するためのタグ-->
	<thead><!--表の行（水平方向）をグループ化するタグ-->
		<tr><!--表の横部分を指定する-->
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th><!--セルを横に結合するタグ-->
		</tr>
	</thead>

	<tbody><!--表の行（水平方向）をグループ化するタグ-->
		<% @books.each do |book| %>
		  <tr>
		  	<td><%= book.title %></td>
		  	<td><%= book.body %></td>
		  	<td><%= link_to "Show", book_path(book.id) %></td>
		  	<td><%= link_to "Edit", edit_book_path(book) %></td>
		  	<th><%= link_to "Destroy", book_path(book), method: :delete %></th>
		  </tr>
		<% end %>
	</tbody>
</table>

<h2>New Book</h2>
<% if @book.errors.any? %>
	 <h2><%= pluralize(@book.errors.count, "error") %>prohibited this artice from being saved:</h2>
	  <div>
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
<% end %>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit "Create Book" %>
<% end %>
